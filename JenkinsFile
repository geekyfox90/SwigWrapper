pipeline {
    agent {
        label "jenkins-slave-argo-qmake"
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    parameters {
        booleanParam(name: 'RELEASE',
            defaultValue: false,
            description: 'Create a Release')                
    }
    triggers { pollSCM('*/10 * * * *') }   
    stages {

        stage("Get Third Parties") {
             steps {
                 script {
                     BRANCH = BRANCH_NAME.replace('/','_')
                     version = getVersion()
                 }
                 withCredentials([string(credentialsId: 'artifactoryApiKey', variable: 'apiKey')]) {
                    installRemaken(params.RELEASE,BRANCH,apiKey)
                 }
             }
        }   

        stage("checkout SolARPipelineManager"){
            steps {
                dir ("SolARPipelineManager") {
                    git branch: BRANCH, changelog: false, credentialsId: 'github-solarBcom', poll: false, url: 'https://github.com/SolarFramework/SolARPipelineManager.git'
                }
            }
        }   

        stage("Build") {
             steps {
                sh "./_build.sh SolARPipelineManager"
                buildModule("")                   
             }
        }

        stage("Build Debug") {
            when {
                expression { params.RELEASE == true }
            }            
             steps {
                buildModule("debug")                   
             }
        }


         stage("Generate artifacts") {
            steps {
                script {
                     prepareRelease("SolARBuild","linux-gcc","SolARWrapper")                
                }
            }
        }  

        // Trigger only if not a RELEASE
        stage("Upload to Artifactory") {
            when {
                expression { params.RELEASE == false }
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'bc6e150e-ede8-4e35-8af4-0f037edee8ac', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
                    uploadArchive(BRANCH,"SolARWrapper/${version}/linux","${WORKSPACE}/artifactory/x86_64_shared_release/SolARWrapper${version}_x86_64_shared_release.zip",USERNAME,PASSWORD)
                }
            }
        }
   
    }

}
